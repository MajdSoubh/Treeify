{
  "name": "maso/treeify",
  "description": "Laravel package allows you to convert flat collections of models into hierarchical tree structures, simplifying parent-child relationships management.",
  "keywords": [
    "treeify",
    "build-tree"
  ],
  "homepage": "https://github.com/majdsoubh/treeify",
  "license": "MIT",
  "type": "library",
  "authors": [
    {
      "name": "Majd Soubh",
      "email": "majdsoubh53@gmail.com"
    }
  ],
  "require": {
    "php": "^7.4|^8.0",
    "illuminate/support": "^8.0"
  },
  "require-dev": {
    "orchestra/testbench": "^6.0",
    "phpunit/phpunit": "^9.0"
  },
  "autoload": {
    "psr-4": {
      "Maso\\Treeify\\": "src/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Maso\\Treeify\\Providers\\ServiceProvider"
      ]
    }
  }
}
